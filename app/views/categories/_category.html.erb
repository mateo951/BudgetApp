<%= link_to "/categories/#{category.id}" do %>
<div id="<%= dom_id category %>" class="category-container">
  <div class="flex-row justify-content-between category-item text-color">
    <div class="flex-row">
        <p>
          <%= image_tag "#{category.icon}", class: "img-show" %>
        </p>
      <p class="title-category black">
        <%= category.name %>
      </p>
    </div>
    <p class="black">
      <%= '$140' %>
    </p>
  </div>
</div>
<% end %>
