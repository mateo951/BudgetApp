<div class="blue-navbar">
    <%= link_to image_tag("/assets/arrow-left.png"), root_path, class: "arrow-back"%>
    <p>REGISTER</p>
    <button id="login-submit" class="borderless-bttn">Next</button>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => 'login-form', :class => 'width-100', 'data-bar' => 'baz'}) do |f| %>
  <div class="field width-100">
    <%= f.text_field :name, autocomplete: "username", placeholder: "Name" %>
  </div>

  <div class="field width-100">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field width-100">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
  </div>
<% end %>
<%= render "devise/shared/error_messages", resource: resource %>

